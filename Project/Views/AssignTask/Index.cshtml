@model IEnumerable<Project.Models.AssignTask>
<link rel="stylesheet" href="/MaterializeUI/assets/vendor/libs/tagify/tagify.css" />
@Html.AntiForgeryToken()

<div class="m-10">
    <div class="card">

        <!-- HEADER -->
        <div class="col-lg-12 mb-3 d-flex justify-content-between align-items-center">
            <h5 class="card-header mb-0">Assigned Task List -- @DateTime.Now.ToString("MMMM dd, yyyy")</h5>
            <button id="btnadd" class="btn btn-warning">Create New</button>
        </div>

        <!-- DATE FILTER -->
        <div class="row mb-3">
            <div class="col-md-3">
                <label for="filterDate">Filter by Date:</label>
                <input type="date" id="filterDate" class="form-control" />
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button id="clearFilterBtn" class="btn btn-secondary">Clear</button>
            </div>
        </div>

        <!-- TABLE -->
        <div class="table-wrapper position-relative responsive-table table-scroll">
            <table class="table table-bordered table-striped mt-3" id="tasksTable">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Employee Name</th>
                        <th>Task Title</th>
                        <th>Date Assigned</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr id="row-@item.Id" data-date="@item.DateAssigned.ToString("yyyy-MM-dd")">
                                <td>@item.Id</td>
                                <td>@item.Employee?.FullName</td>
                                <td>@item.Task?.Title</td>
                                <td>@item.DateAssigned.ToString("yyyy-MM-dd")</td>
                                <td id="status-@item.Id">
                                    @if (item.Status == "Completed")
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else if (item.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-success btn-sm"
                                            onclick="markDone(@item.Id)"
                                            @(item.Status == "Completed" ? "disabled" : "")>
                                        Done
                                    </button>

                                    <button class="btn btn-danger btn-sm"
                                            onclick="deleteTask(@item.Id)"
                                            @(item.Status == "Completed" ? "disabled" : "")>
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">No assigned tasks found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- MODAL FORM -->
<div class="modal fade" id="modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-simple modal-edit-user">
        <div class="modal-content">
            <div class="modal-body p-0 modal-overlay-wrapper">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                <div class="text-center mb-4">
                    <h4>Assign Task</h4>
                </div>

                <form asp-controller="AssignTask" asp-action="Create" method="post" id="modalForm" class="row g-4">
                    @Html.AntiForgeryToken()

                    <!-- Date Assigned -->
                    <div class="col-md-12">
                        <div class="form-floating form-floating-outline">
                            <input type="date" id="DateAssigned" name="DateAssigned" class="form-control" readonly value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <label for="DateAssigned">Date Assigned</label>
                        </div>
                    </div>

                    <!-- Employee -->
                    <div class="col-md-12">
                        <div class="form-floating form-floating-outline">
                            <select id="EmployeeId" name="EmployeeId" class="form-select">
                                <option value="">-- Select Employee --</option>
                                @foreach (var emp in ViewBag.Employees ?? new List<Project.Models.Employee>())
                                {
                                    <option value="@emp.Id">@emp.Id - @emp.FullName</option>
                                }
                            </select>
                            <label for="EmployeeId">Employee</label>
                        </div>
                    </div>

                    <!-- Tasks -->
                    <div class="col-12 col-md-12">
                        <div class="form-floating form-floating-outline">
                            <input id="menulist" name="TaskIds" class="form-control h-auto" placeholder="select tasks" />
                            <label for="menulist">Select Task</label>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="col-12 text-center mt-3">
                        <button type="submit" id="btnSubmit" class="btn btn-primary me-3">Submit</button>
                        <button type="reset" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- SCRIPTS -->
<script src="/MaterializeUI/assets/vendor/libs/jquery/jquery.js"></script>
<script src="/MaterializeUI/assets/vendor/libs/tagify/tagify.js"></script>

<script>
    // ======== MODAL TASK SELECTION ========
    document.getElementById("btnadd").addEventListener("click", function () {
        const modalElement = document.getElementById("modal");
        const modal = new bootstrap.Modal(modalElement);
        modal.show();

        document.getElementById("DateAssigned").value = new Date().toISOString().split('T')[0];

        fetch('/AssignTask/GetTasks')
            .then(res => res.json())
            .then(_data => {
                const data = _data.map(t => ({ id: t.id, value: t.title }));
                var listEl = document.querySelector('#menulist');
                if (listEl) new Tagify(listEl, {
                    enforceWhitelist: true,
                    whitelist: data,
                    maxTags: 10,
                    dropdown: { maxItems: 20, enabled: 0, closeOnSelect: false }
                });
            })
            .catch(console.error);
    });

    // ======== FORM SUBMISSION FOR TAGIFY ========
    document.getElementById("modalForm").addEventListener("submit", function(e){
        var tagify = document.querySelector('#menulist').tagify;
        var taskIds = tagify.value.map(t => t.id);

        document.querySelectorAll('input[name="TaskIds"]').forEach(el => el.remove());

        taskIds.forEach(id => {
            var input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'TaskIds';
            input.value = id;
            this.appendChild(input);
        });
    });

    // ======== ACTIONS ========
    function markDone(id) {
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        fetch(`/AssignTask/MarkDone/${id}`, {
            method: 'POST',
            headers: { 'RequestVerificationToken': token }
        })
        .then(res => {
            if (res.ok) {
                document.getElementById(`status-${id}`).innerHTML =
                    '<span class="badge bg-success">Completed</span>';
                const doneBtn = document.querySelector(`#row-${id} button.btn-success`);
                if (doneBtn) doneBtn.disabled = true;
                const deleteBtn = document.querySelector(`#row-${id} button.btn-danger`);
                if (deleteBtn) deleteBtn.disabled = true;
            } else {
                res.text().then(text => alert('Failed: ' + text));
            }
        })
        .catch(err => { console.error(err); alert('Error marking task as done.'); });
    }

    function deleteTask(id) {
        if (!confirm('Are you sure you want to delete this task?')) return;
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        fetch(`/AssignTask/Delete/${id}`, {
            method: 'POST',
            headers: { 'RequestVerificationToken': token }
        })
        .then(res => {
            if (res.ok) {
                document.getElementById(`row-${id}`).remove();
            } else {
                alert('Failed to delete task.');
            }
        })
        .catch(err => { console.error(err); alert('Error deleting task.'); });
    }

    // ======== DATE FILTER ========
    document.getElementById("filterDate").addEventListener("change", function() {
        const selectedDate = this.value;
        const rows = document.querySelectorAll("#tasksTable tbody tr");

        rows.forEach(row => {
            const rowDate = row.getAttribute("data-date");
            row.style.display = selectedDate === "" || rowDate === selectedDate ? "" : "none";
        });
    });

    document.getElementById("clearFilterBtn").addEventListener("click", function() {
        document.getElementById("filterDate").value = "";
        document.querySelectorAll("#tasksTable tbody tr").forEach(row => row.style.display = "");
    });
</script>
