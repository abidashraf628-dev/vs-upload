<!-- Content -->
<div class="m-10">
    <div class="card">

        <div class="col-lg-12">
            <div>
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <h5 class="card-header">Tasks List</h5>
                        <button id="btnadd" class="btn btn-warning">Create New</button>
                    </li>
                </ul>
            </div>
        </div>


        <div class="table-wrapper position-relative responsive-table table-scroll">

            <table class="table table-bordered table-striped mt-3">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.tasks)
                    {
                        <tr>
                            <td>@c.Title</td>
                            <td>@c.Description</td>
                            <td>@c.Status</td>
                            <td>
                                <button class="btn btn-warning btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editTasksModal"
                                        data-id="@c.Id"
                                        data-title="@c.Title"
                                        data-description="@c.Description"
                                        data-status="@c.Status">
                                    Edit
                                </button>

                                <form asp-controller="Tasks"
                                      asp-action="Delete"
                                      asp-route-id="@c.Id"
                                      method="post"
                                      class="delete-form"
                                      style="display:inline-block;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>


            <!-- Overlay Loader -->
            <div id="tableOverlayLoader" class="table-overlay d-none">
                <div class="text-center">
                    <div class="d-flex justify-content-center gap-2 mb-2">
                        <div class="spinner-grow text-primary"></div>
                        <div class="spinner-grow text-success"></div>
                        <div class="spinner-grow text-warning"></div>
                    </div>
                    <div class="fw-medium">Loading...</div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- Content -->

<div class="modal fade" id="modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-simple modal-edit-user">

        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-body p-0 modal-overlay-wrapper">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <div class="text-center mb-2">
                    <h4 class="mb-6">Tasks List</h4>
                </div>



                <form asp-controller="Tasks" asp-action="Create" method="post"
                      class="row g-5" id="modalForm">

                    <input id="userId" hidden />

                    <div class="col-md-12" id="divEmployeeId">
                        <div class="input-group input-group-merge">
                            <div class="form-floating form-floating-outline">
                                <input type="text"
                                       id="Title"
                                       name="Title"
                                       class="form-control"
                                       placeholder="john.doe"
                                       aria-label="john.doe"
                                       aria-describedby="Title2" />
                                <label for="Title">Title</label>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-12" id="divEmployeeId">
                        <div class="input-group input-group-merge">
                            <div class="form-floating form-floating-outline">
                                <input type="text"
                                       id="Description"
                                       name="Description"
                                       class="form-control"
                                       placeholder="john.doe"
                                       aria-label="john.doe"
                                       aria-describedby="Description2" />
                                <label for="Description">Description</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12" id="divEmployeeId">
                        <div class="input-group input-group-merge">
                            <div class="form-floating form-floating-outline">
                                <select id="Status"
                                        name="Status"
                                        class="form-select"
                                        aria-label="Status"
                                        required>
                                    <option value="" selected>Select Status</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Assigned">Assigned</option>
                                    <option value="Completed">Completed</option>
                                </select>
                                <label for="Status">Status</label>
                            </div>
                        </div>
                    </div>


                    <div class="col-12 text-center">
                        <button id="btnSubmit" class="btn btn-primary me-3">Submit</button>
                        <button type="reset"
                                class="btn btn-outline-secondary"
                                data-bs-dismiss="modal"
                                aria-label="Close">
                            Cancel
                        </button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
<div class="modal fade" id="editTasksModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-simple modal-edit-user">

        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-body p-0 modal-overlay-wrapper">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <div class="text-center mb-2">
                    <h4 class="mb-6">Tasks List</h4>
                </div>



                <form asp-controller="Tasks" asp-action="Edit" method="post"
                      class="row g-5" id="modalForm">
                    @Html.AntiForgeryToken()
                    <input id="editId" name="Id" hidden />

                    <div class="col-md-12" id="divEmployeeId">
                        <div class="input-group input-group-merge">
                            <div class="form-floating form-floating-outline">
                                <input type="text"
                                       id="editTitle"
                                       name="Title"
                                       class="form-control"
                                       placeholder="john.doe"
                                       aria-label="john.doe"
                                       aria-describedby="Title2" />
                                <label for="Title">Title</label>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-12" id="divEmployeeId">
                        <div class="input-group input-group-merge">
                            <div class="form-floating form-floating-outline">
                                <input type="text"
                                       id="editDescription"
                                       name="Description"
                                       class="form-control"
                                       placeholder="john.doe"
                                       aria-label="john.doe"
                                       aria-describedby="Description2" />
                                <label for="Description">Description</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12" id="divEmployeeId">
                        <div class="input-group input-group-merge">
                            <div class="form-floating form-floating-outline">
                                <select id="Status"
                                        name="Status"
                                        class="form-select"
                                        aria-label="Status"
                                        required>
                                    <option value="Pending" selected>Pending</option>
                                    <option value="Assigned">Assigned</option>
                                    <option value="Completed">Completed</option>
                                </select>
                                <label for="Status">Status</label>
                            </div>
                        </div>
                    </div>



                    <div class="col-12 text-center">
                        <button id="btnSubmit" class="btn btn-primary me-3">Submit</button>
                        <button type="reset"
                                class="btn btn-outline-secondary"
                                data-bs-dismiss="modal"
                                aria-label="Close">
                            Cancel
                        </button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>


    document.addEventListener('DOMContentLoaded', function () {

        /* ===============================
           CREATE MODAL (Create New)
           =============================== */
        const btnAdd = document.getElementById('btnadd');
        const createModalEl = document.getElementById('modal');

        if (btnAdd && createModalEl) {
            const createModal = new bootstrap.Modal(createModalEl);

            btnAdd.addEventListener('click', function () {
                createModalEl.querySelector('form').reset();

    // force default status
    createModalEl.querySelector('select[name="Status"]').value = "Pending";

    createModal.show();
                
            });
        }

        /* ===============================
           EDIT MODAL (Populate fields)
           =============================== */
        const editModalEl = document.getElementById('editTasksModal');

        if (editModalEl) {
            editModalEl.addEventListener('show.bs.modal', function (event) {

                const button = event.relatedTarget;

                // read data attributes
                const id = button.getAttribute('data-id');
                const title = button.getAttribute('data-title');
                const description = button.getAttribute('data-description');
                const status = button.getAttribute('data-status');

                // set modal fields
                document.getElementById('editId').value = id;
                document.getElementById('editTitle').value = title;
                document.getElementById('editDescription').value = description;
                document.getElementById('editStatus').value = status;
            });
        }

        /* ===============================
           DELETE CONFIRMATION
           =============================== */
        document.querySelectorAll('.delete-form').forEach(form => {
            form.addEventListener('submit', function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'Are you sure?',
                    text: "This action cannot be undone!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });

    });
</script>


